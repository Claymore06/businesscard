<%- model_class = Group -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, company_group_path(group.company_id, group) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")), company_group_users_path(group.company_id, group.id), :class => 'btn btn-mini'%>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_company_group_path(group.company_id, group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), company_group_path(group.company_id,group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_group_path,
            :class => 'btn btn-primary' %>
          <%= link_to t('.back', :default => t("helpers.links.back")), companies_path , :class => 'btn btn-info'%>
