<%- model_class = NameCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:tel) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @name_cards.each do |name_card| %>
      <tr>
        <td><%= link_to name_card.name, company_group_user_name_card_path(name_card.user.group.company_id, name_card.user.group_id, name_card.user_id, name_card.id) %></td>
        <td><%= name_card.address %></td>
        <td><%= name_card.fax %></td>
        <td><%= name_card.tel %></td>
        <td><%= name_card.url %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_company_group_user_name_card_path(name_card.user.group.company_id, name_card.user.group_id, name_card.user_id, name_card.id), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      company_group_user_name_card_path(name_card.user.group.company_id, name_card.user.group_id, name_card.user_id, name_card.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_group_user_name_card_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
            company_group_users_path,
            :class => 'btn btn-info' %>
